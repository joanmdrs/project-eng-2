// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["extendedIndexes"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Recepcionist {
  id       Int    @id @default(autoincrement())
  name     String @db.VarChar(255)
  cpf      String @unique @db.VarChar(255)
  phone    String @db.VarChar(14)
  email    String @db.VarChar(255)
  username String @unique @db.VarChar(50)
  password String @db.VarChar(60)
}

model Patient {
  id       Int    @id @default(autoincrement())
  name     String @db.VarChar(255)
  cpf      String @unique @db.VarChar(255)
  phone    String @db.VarChar(14)
  email    String @db.VarChar(255)
  username String @unique @db.VarChar(50)
  password String @db.VarChar(60)

  @@index([cpf], type: Hash)
  Diagnosis Diagnosis[]
}

model Doctor {
  id        Int         @id @default(autoincrement())
  name      String      @db.VarChar(255)
  crm       String      @unique @db.VarChar(13)
  phone     String      @db.VarChar(14)
  email     String      @db.VarChar(255)
  username  String      @unique @db.VarChar(50)
  password  String      @db.VarChar(60)
  Diagnosis Diagnosis[]
}

model Exam {
  id           Int    @id @default(autoincrement())
  title        String @db.VarChar(255)
  patient_cpf  String @unique @db.VarChar(255)
  patient_name String @db.VarChar(255)
  doctor_crm   String @unique @db.VarChar(13)
  doctor_name  String @db.VarChar(255)
  description  String @db.VarChar(500)
}

model Appointment {
  id               Int         @id @default(autoincrement())
  title            String      @db.VarChar(255)
  patient_cpf      String      @db.VarChar(255)
  patient_name     String      @db.VarChar(255)
  doctor_crm       String      @db.VarChar(13)
  doctor_name      String      @db.VarChar(255)
  data_appointment String      @db.VarChar(20)
  description      String      @db.VarChar(500)
  Diagnosis        Diagnosis[]
}

model Diagnosis {
  id             Int         @id @default(autoincrement())
  doctor_crm     String      @unique
  doctor         Doctor      @relation(fields: [doctor_crm], references: [crm])
  description    String      @db.VarChar(500)
  patient_cpf    String      @unique
  patient        Patient     @relation(fields: [patient_cpf], references: [cpf])
  appointment_id Int         @unique
  appointment    Appointment @relation(fields: [appointment_id], references: [id])
  illness_id     String
}
